# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME="Akudihatinya Backend"
APP_ENV=local
APP_KEY= # <-- WAJIB diisi di production (php artisan key:generate)
APP_DEBUG=true  # DEV default
# APP_DEBUG=false  # PRODUCTION: uncomment & gunakan false di server
APP_TIMEZONE="Asia/Jakarta"
APP_URL=http://localhost:8000

# Localization
APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

# Maintenance
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# Server Configuration
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_CHANNEL=stack
LOG_STACK=single   # PRODUCTION: ganti ke 'daily' untuk rotasi
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug    # PRODUCTION: gunakan info / warning
# LOG_DAILY_DAYS=14 # retensi log harian (aktif bila LOG_STACK=daily)

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=akudihatinya
DB_USERNAME=root
DB_PASSWORD=

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false  # PRODUCTION: true jika HTTPS
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax        # PRODUCTION: strict bila tidak perlu embed cross-site

# =============================================================================
# CACHE & QUEUE CONFIGURATION
# =============================================================================
CACHE_STORE=database   # PRODUKSI beban tinggi: pertimbangkan redis
CACHE_PREFIX=akudihatinya

QUEUE_CONNECTION=database  # Skala besar: redis / sqs
QUEUE_FAILED_DRIVER=database-uuids

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# =============================================================================
# MEMCACHED CONFIGURATION
# =============================================================================
MEMCACHED_HOST=127.0.0.1

# =============================================================================
# MAIL CONFIGURATION
# =============================================================================
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@akudihatinya.com"
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# AWS CONFIGURATION
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
VITE_APP_NAME="${APP_NAME}"

# =============================================================================
# SECURITY & RATE LIMITING
# =============================================================================
RATE_LIMIT_GLOBAL=120,1    # format: hits,minutes (120 req / 1 menit)
# RATE_LIMIT_API=60,1      # contoh limit berbeda
APP_TRUSTED_PROXIES=*      # sesuaikan dengan IP / CIDR proxy
# FORCE_HTTPS=1            # dapat dibaca middleware custom

# =============================================================================
# OBSERVABILITY / OPTIONAL
# =============================================================================
# SENTRY_DSN=

# =============================================================================
# UPGRADE / OPERATIONS NOTES
# =============================================================================
# - Set APP_DEBUG=false di production.
# - Gunakan LOG_STACK=daily + LOG_LEVEL=info untuk mengurangi noise.
# - Pertimbangkan Redis untuk CACHE/SESSION/QUEUE ketika concurrency naik.
# - Jangan ubah APP_KEY setelah data terenkripsi tersimpan.
# - Tuning RATE_LIMIT_GLOBAL sesuai profil trafik.
